exec xautolock -time 5 -locker 'i3lock --color=2a2a2a -i /home/wux/Pictures/hollinlaptop.png' -corners +-00 -cornerdelay 4 -cornerredelay 4 &

bindsym Print exec --no-startup-id /usr/bin/xfce4-screenshooter
